{
	"name": "Dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "orders_source",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "Split"
				},
				{
					"name": "normalvalue"
				}
			],
			"scriptLines": [
				"source(output(",
				"          id as string,",
				"          date as string,",
				"          value as string,",
				"          customer_id as string,",
				"          product_id as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     documentForm: 'documentPerLine') ~> source1",
				"source1 derive(intvalue = toInteger((substring(value, 2, length(value) - 4) + right(value, 2))),",
				"          currency = left(value, 1)) ~> Split",
				"Split derive(value = iif(equals(currency, \"$\"), toInteger(intvalue * 0.78), iif(equals(currency, \"â‚¬\"), toInteger(intvalue * 0.86), intvalue))) ~> normalvalue",
				"normalvalue sink(allowSchemaDrift: false,",
				"     validateSchema: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     saveOrder: 1,",
				"     mapColumn(",
				"          id,",
				"          date,",
				"          value,",
				"          customer_id,",
				"          product_id,",
				"          intvalue,",
				"          currency",
				"     )) ~> sink1"
			]
		}
	}
}